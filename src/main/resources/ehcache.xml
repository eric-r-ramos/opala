<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="com.opala.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
    

    <cache name="com.opala.social.SocialUserConnection"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Agendamento"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Agendamento.listaPassageiros"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Agendamento.listaDestinos"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Cliente"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Cliente.listaSolicitantes"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Motorista"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Passageiro"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Veiculo"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Solicitante"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Solicitante.listaAgendamentos"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Itinerario"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="com.opala.domain.Endereco"
        timeToLiveSeconds="3600">
    </cache>

    <!-- jhipster-needle-ehcache-add-entry -->
</ehcache>
